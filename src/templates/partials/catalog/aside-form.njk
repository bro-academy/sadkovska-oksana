<section class="filter">

    {% for filter in filters %}
        <form class="filter__clothing-block">
            

            <details class="filter__details details" open>
                <summary class="details__heading">
                    <h3 class="details__heading-item">{{ filter.name }}</h3>
                    </summary>

                {% for item in filter.items %}
                    
                    <div>
                        <label class="details__label">
                        <input class="details__{{filter.type}} {{filter.type}}" type="{{ filter.type }}" name="{{ item.name }}" value="{{ item.value }}">
                        {{ item.label}}
                    </label>
                    </div>

                {% endfor %}
            </details>

        </form>
    {% endfor %}
    <button class="filter__button button button--primary" type="submit">Apply</button>

</section>